<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question2"
        android:paddingBottom="10dip"/>
    <RadioGroup 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dip"
        android:orientation="vertical"
        android:paddingBottom="30dip">
        <RadioButton 
            android:id="@+id/q2a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ela será a mesma para todos os objetos daquela classe."/>
        <RadioButton
            android:id="@+id/q2a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ela  será a diferente para todos os objetos daquela classe."/>
        <RadioButton 
            android:id="@+id/q2a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ela será a mesma para alguns os objetos daquela classe."/>
    </RadioGroup>

</LinearLayout>